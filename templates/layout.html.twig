{% extends 'base.html.twig' %}

{% block title 'TV Show Catalog' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/bootstrap.min.css') }}">
    <style>
        .jumbotron .container {
            background: url({{ asset('/logo.svg') }}) bottom right no-repeat;
        }
    </style>
{% endblock %}

{% block body %}
    <header>
        <nav id="navbar-header" class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand" href="{{ path('tv_shows_list') }}">üçø <strong>TV Show Catalog</strong></a>
                <div class="collapse navbar-collapse ml-5">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('tv_shows_list') }}">TV Shows</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                        </li>
                        {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('register') }}">Register</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('login') }}">Login</a>
                        </li>
                        {% else %}
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ path('logout') }}">Logout</a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
                <ul class="list-inline mr-0 my-2">
                    <li class="list-inline-item"><a class="text-white-50" href="">English</a></li>
                    <li class="list-inline-item"><a class="text-white-50" href="">Deutsch</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <main role="main">
        <div class="jumbotron pt-3 pb-0 mb-0">
            <div class="container mt-md-3 pt-1 pb-2">
                <p class="display-4">Symfony Training</p>
                <p>This is a example application for training purposes only.</p>
            </div>
        </div>
        <div class="align-baseline bg-light">
            <div class="container pt-5 pb-5">
                {% for msg in app.flashes('success') %}
                    <div class="alert-success">
                        {{ msg }}
                    </div>
                {% endfor %}
                {% block main %}{% endblock %}
            </div>
        </div>
    </main>
    <footer class="text-muted small pt-4">
        <div class="container">
            <p class="float-right">
                <a href="#">Back to top</a>
            </p>
            <p><a href="https://symfony.com/doc" target="_blank">Symfony Documentation</a></p>
        </div>
    </footer>
{% endblock %}
